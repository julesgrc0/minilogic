{
  "name": "minilogic",
  "displayName": "minilogic",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.98.0"
  },
  "main": "./out/extension.js",
  "scripts": {
    "compile": "tsc -p ./",
    "clean": "rm -rf ./out",
    "lint": "eslint",
    "format": "prettier --write ./src",
    "launch": "npm run clean && npm run compile"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "minilogic",
        "aliases": [
          "MiniLogic",
          "minilogic"
        ],
        "extensions": [
          ".mlc"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "minilogic",
        "scopeName": "source.mlc",
        "path": "./syntaxes/minilogic.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "minilogic",
        "path": "./snippets.json"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "minilogic.runCode",
          "when": "editorLangId == minilogic",
          "group": "navigation"
        }
      ]
    },
    "commands": [
      {
        "command": "minilogic.runCode",
        "title": "Run MiniLogic File",
        "icon": "$(play)"
      }
    ],
    "completionItemProvider": {
      "language": "minilogic"
    }
  },
  "devDependencies": {
    "@eslint/js": "^9.23.0",
    "@stylistic/eslint-plugin": "^4.2.0",
    "@types/node": "^22.13.17",
    "@types/vscode": "^1.98.0",
    "@vscode/vsce": "^3.3.2",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.29.0"
  },
  "dependencies": {
    "prettier": "^3.5.3"
  }
}
